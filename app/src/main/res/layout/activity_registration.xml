<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/bgg">
<include layout="@layout/toolbar_reg"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="10dp"
    android:id="@+id/input_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:gravity="center">

    <ImageView
        android:background="@drawable/edittextborder_new"
        android:id="@+id/iv"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/user" />

    <Button
        android:id="@+id/btn_take_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Select or Capture Image"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edt_agent_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_top"
        android:hint="Enter Agent Code"
        android:inputType="number"
        android:padding="15dp" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_top"
        android:hint="Full Name"
        android:inputType="textCapSentences|textCapWords"
        android:padding="15dp" />

    <EditText
        android:id="@+id/edt_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Address"
        android:inputType="textCapSentences|textCapWords"
        android:padding="15dp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/edt_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Mobile"
        android:maxLength="10"
        android:inputType="number"
        android:padding="15dp"/>

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bottom"
        android:padding="15dp"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/edit_text_middle"
            android:id="@+id/txt_date"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:selectAllOnFocus="true"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="Date Of Birth" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_date"
            android:src="@drawable/calendar"
            android:layout_width="50dp"
            android:layout_height="35dp"/>

    </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edt_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_top"
        android:hint="Occupation"
        android:inputType="textCapSentences|textCapWords"
        android:padding="15dp" />
    <EditText
        android:id="@+id/edt_acc_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Account Number"
        android:inputType="number"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/edt_adhar_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Aadhar No"
        android:inputType="number"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/edt_pan_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Pan No"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        android:padding="15dp"/>
    <TextView
        android:textColor="@color/white"
        android:text="Nomination Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_nom_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Address"
        android:inputType="textCapSentences|textCapWords"
        android:padding="15dp" />
    <EditText
        android:id="@+id/edt_nom_adhar_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Aadhar No"
        android:inputType="number"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/edt_nom_pan_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Pan No"
        android:textAllCaps="true"
        android:inputType="textCapCharacters"
        android:padding="15dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/edit_text_middle"
            android:id="@+id/txt_rd_start_date"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:selectAllOnFocus="true"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="R.D Start Date" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_rd_start_date"
            android:src="@drawable/calendar"
            android:layout_width="50dp"
            android:layout_height="35dp"/>

    </LinearLayout>
    <TextView
        android:textColor="@color/white"
        android:text="R.D Mature Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:enabled="false"
            android:background="@drawable/edit_text_middle"
            android:id="@+id/txt_rd_mature_date"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:selectAllOnFocus="true"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="R.D Matured Date" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_rd_mature_date"
            android:src="@drawable/calendar"
            android:layout_width="50dp"
            android:layout_height="35dp"/>

    </LinearLayout>
    <Spinner
        android:id="@+id/spinner_emi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bottom"
        android:padding="15dp"
        />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/terms"
        android:text="View Terms and condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <LinearLayout
          android:orientation="vertical"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
    <TextView
         android:textColor="@color/white"
        android:text="I Accept All Terms and Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

          <CheckBox
              android:id="@+id/chk_term"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
    <Button
        android:id="@+id/btn_stud_registrtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="SIGN UP"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/signIn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:text="Already Have an Account?  Sign in"
        android:textAllCaps="true"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"/>

</LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>